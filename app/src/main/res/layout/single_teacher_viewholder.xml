<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="4dp"
    >
    <RelativeLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/mainRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lessonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linLayFallow"
            android:text="Name"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/linkColo"
            android:textSize="16sp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="4dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profileImage"
            android:layout_below="@id/lessonName"

            android:src="@drawable/scientist_black"
            />
        <ProgressBar
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/lessonName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:id="@+id/progressBar"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lessonName"
            android:layout_toEndOf="@id/profileImage"
            android:layout_marginTop="16dp"
            android:text="Doç.Dr.Name NAME"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="#000"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainRel"
        android:layout_marginTop="4dp"
        >
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            >
        <android.support.v7.widget.CardView
            android:layout_marginBottom="4dp"
            android:layout_weight="2"
            android:id="@+id/messageCard"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:elevation="5dp"
            app:cardCornerRadius="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_margin="4dp"
                    android:id="@+id/messageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/send_messega_scientist"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/messageButton"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="4dp"
                    android:text="Mesaj Gönder"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_weight="2"
            android:id="@+id/randevuCard"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="4dp"
            android:elevation="5dp"
            app:cardCornerRadius="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_margin="4dp"
                    android:id="@+id/randevuButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/radevu"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/randevuButton"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="4dp"
                    android:text="Randevu Al"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>