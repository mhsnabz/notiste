<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScientistOneToOneChat.ScientistOneToOneChatActivity">
    <include layout="@layout/toolbar" android:id="@+id/toolbar"></include>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/message"
        android:layout_marginBottom="62dp"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/linlayMessage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:weightSum="20"
        >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="18"
            android:hint="Yeni Bir Mesaj Yaz"
            android:layout_marginLeft="4dp"
            android:id="@+id/new_message_edittex"

            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/send_button"
            android:id="@+id/sendButton"
            />
    </LinearLayout>
</RelativeLayout>