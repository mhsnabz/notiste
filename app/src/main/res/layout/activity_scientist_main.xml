<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scientist.ScientistMainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="4dp"
            >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/scientist_white"
            />
            <ProgressBar
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:id="@+id/progressBar"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Doç.Dr. Yakup Kutlu"
                android:textColor="#fff"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_below="@id/name"
                android:layout_marginLeft="12dp"
                android:id="@+id/priotiry"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textSize="12sp"

                android:textStyle="italic"
                android:textColor="#fff"
                />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
<ScrollView
    android:layout_below="@id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/mainGrid"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="1dp"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:onClick="postNoteClick"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

           <RelativeLayout
               android:onClick="postNoteClick"
               android:layout_gravity="center"
               android:layout_margin="8dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
                <ImageButton
                    android:onClick="postNoteClick"
                    android:layout_margin="4dp"
                    android:id="@+id/dersNot"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/post"
                    />
                <TextView

                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:text="Ders Notlarını Paylaş"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/dersNot"
                    android:id="@+id/mesaj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textStyle="bold"

                    />
           </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:onClick="sinavSonuclariniPaylas"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:onClick="sinavSonuclariniPaylas"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:onClick="sinavSonuclariniPaylas"
                    android:background="@android:color/transparent"

                    android:layout_margin="4dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/exams_result"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/sinavSonuc"
                    />
                <TextView
                    android:layout_below="@id/sinavSonuc"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="11sp"
                    android:textColor="@color/colorAccent"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sınav Sonuçlarını Paylaş"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:onClick="makeNotices"
                    android:layout_margin="4dp"
                    android:id="@+id/duyuru"
                    android:background="@android:color/transparent"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile_duyuru"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/duyuru"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duyuru Yap"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_margin="4dp"
                    android:id="@+id/randevuIstekleri"

                    android:background="@android:color/transparent"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/scientist_randevu"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/randevuIstekleri"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Randevu İstekleri"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:onClick="messages"
                    android:layout_margin="4dp"
                    android:id="@+id/mesajIstekleri"
                    android:background="@android:color/transparent"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile_messages"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/mesajIstekleri"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesajlar"

                    />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton

                    android:layout_margin="4dp"
                    android:id="@+id/grupOlustur"
                    android:background="@android:color/transparent"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile_messages"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_centerInParent="true"
                   android:layout_below="@id/grupOlustur"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grup Oluştur"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:onClick="getStudents"
                    android:layout_margin="4dp"
                    android:id="@+id/ogrencilerin"

                    android:background="@android:color/transparent"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/scientist_students"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/ogrencilerin"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Öğrencileriniz "

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>
</ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/logout"
        />
</RelativeLayout>