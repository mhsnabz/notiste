<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.AlertDialogLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="4dp"
        android:elevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <LinearLayout
          android:id="@+id/linlayTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"

          android:layout_alignParentTop="true"
          >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/warning"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Alternatif Seçenekler"
              android:layout_gravity="center"
              android:textSize="15sp"
              android:textColor="#000"
              />
      </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_centerHorizontal="true"
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linlayTitle"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="8dp"
            android:elevation="-10dp"
            >

            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <GridLayout
                   android:layout_margin="4dp"

                    android:id="@+id/mainGrid"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:padding="1dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageButton
                           android:layout_centerHorizontal="true"
                            android:id="@+id/googleDrive"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/google_drive"
                            />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/googleDrive"
                            android:text="Google Drive"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageButton
                            android:layout_centerHorizontal="true"
                            android:id="@+id/oneDrive"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/one_drive"
                            />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/oneDrive"
                            android:text="OneDrive"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageButton
                            android:layout_centerHorizontal="true"
                            android:id="@+id/yandexDisk"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/yandex_disk"
                            />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/yandexDisk"
                            android:text="Yandex Disk"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageButton
                            android:layout_centerHorizontal="true"
                            android:id="@+id/web"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/web"
                            />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/web"
                            android:text="Link"
                            />
                    </RelativeLayout>
                </GridLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card"
            android:text="En fazla 5 mb dosya yükleyebilirsiniz.
                          Bu Seçeneklerden Birini Kullanmanızı
                          Öneririz "
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.AlertDialogLayout>